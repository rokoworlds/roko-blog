---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
// import About from "../components/About.astro";
import "../styles/main.scss";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>roko</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
      <section class="posts">
        <div class="posts__inner container">
          <div class="posts__info">
            <p class="posts__title">Latest posts</p>
            <a href="/" class="posts__link link">See all posts</a>
          </div>
          <div class="posts__all">
            <ul class="posts__all-list">
              <li class="posts__all-item">
                <a href="/" class="posts_all-link">
                  <div class="posts__all-card card">
                    <div class="posts__all-card-info">
                      <p class="posts__card-title">Getting started</p>
                      <p class="posts__card-description">
                        Hit the ground running.
                      </p>
                    </div>
                    <div class="posts__card-icon icon">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        height="24px"
                        viewBox="0 -960 960 960"
                        width="24px"
                        fill="#e3e3e3"
                        ><path
                          d="M504-480 320-664l56-56 240 240-240 240-56-56 184-184Z"
                        ></path></svg
                      >
                    </div>
                  </div>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>

